<% /* eslint-disable */ %>
<%- include("header") -%>
<div class="addcontainer tool-display">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12 col-md-7 col-lg-8 col-xl-9 toolinfo">
        <h1><%= tool.title %></h1>
        <h3>DESCRIPTION</h3>
        <p class="tooltext"><%= tool.description %></p>
        <% tool.img.forEach(function(img) { %>
        <img src="data:image/<%=img.contentType%>;base64, <%=img.data.toString('base64')%>">
        <% }) %>
        <h3>WHEN TO USE IT</h3>
        <p class="tooltext"><%= tool.whenToUse %></p>
        <h3>HOW TO USE IT</h3>
        <p class="tooltext"><%= tool.howToUse %></p>
        <ol>
          <% tool.howToSteps.forEach(function(step, i) { %>
          <li class="tooltext"><%=step%></li>
          <% }) %>
        </ol>

      </div>
      <div class="col col-md-5 col-lg-4 col-xl-3 tags">
        <h3>Tags</h3><br />
        <% tool.tags.forEach(function(tag) { %>
          <div class="tagdisplay">
            <span class="<%=tag.class%>"></span><%=tag.text%>
          </div>
        <% }) %>
        <br />
        <h3>Suggested Application</h3><br />
        <p class="tagtext"><%= tool.suggestedApplication %></p>
        <h3>References</h3><br />
        <% tool.references.forEach(function(ref) { %>
          <div>
            <a class="reftext" href="https://<%=ref%>"><%=ref%></a>
          </div>
        <% }) %>
        <div class='edit-btn'>
          <button class="btn btn-light btn-sm" type="button" onclick="location.href='/edittool/<%=tool._id%>';">Edit Tool</button>
        </div>
      </div>
    </div>



  </div>
</div>


<%- include("footer") -%>
